{
  "manifest_version": 3,
  "name": "CNKI Data Collector",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "webRequest",
    "webNavigation",
    "notifications",
    "sidePanel",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "点击打开侧边栏"
  },
  "icons": {
        "16": "icons/buoumao.png",
        "48": "icons/jumao.png",
        "128": "icons/lanmao.png"
  },
  "side_panel": {
    "default_path": "/popup/index.html",
    "openPanelOnActionClick": true
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
